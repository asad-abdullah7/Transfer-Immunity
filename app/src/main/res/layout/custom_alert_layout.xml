<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10ssp"
        android:backgroundTint="@color/white"
        android:padding="@dimen/_10ssp">

        <TextView
            android:id="@+id/txtDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_bold"
            android:padding="@dimen/_5ssp"
            android:text="title"
            android:textAllCaps="true"
            android:textColor="@color/purple_200"
            android:textSize="@dimen/title_text" />

        <TextView
            android:id="@+id/txtDialogMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDialogTitle"
            android:padding="@dimen/_5ssp"
            android:text="Message"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_text" />


        <TextView
            android:id="@+id/btnYesCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDialogMessage"
            android:layout_marginTop="@dimen/_12ssp"
            android:layout_marginEnd="@dimen/_10ssp"
            android:layout_toStartOf="@id/btnViewCustom"
            android:padding="@dimen/_10ssp"
            android:text="Yes"
            android:textAllCaps="true"
            android:textColor="@color/purple_200"
            android:textSize="@dimen/normal_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnViewCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDialogMessage"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_12ssp"
            android:layout_marginEnd="@dimen/_10ssp"
            android:padding="@dimen/_10ssp"
            android:text="View Details"
            android:textAllCaps="true"
            android:textColor="@color/purple_200"
            android:textSize="@dimen/normal_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnOkCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDialogMessage"
            android:layout_marginTop="@dimen/_12ssp"
            android:layout_marginEnd="@dimen/_10ssp"
            android:layout_toStartOf="@id/btnYesCustom"
            android:padding="@dimen/_10ssp"
            android:text="OK"
            android:textAllCaps="true"
            android:textColor="@color/purple_200"
            android:textSize="@dimen/normal_text"
            android:textStyle="bold" />


    </RelativeLayout>
</layout>