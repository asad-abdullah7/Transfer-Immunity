<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.LoginActivity">

        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5ssp"
            android:orientation="horizontal"
            android:padding="@dimen/_15ssp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:src="@drawable/transfer_immunity_ho" />

            <ImageView
                android:id="@+id/crossImage"
                android:layout_width="0dp"
                android:layout_height="@dimen/_18ssp"
                android:layout_gravity="center"
                android:layout_weight="0.22"
                android:src="@drawable/close_icon"
                app:tint="@color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtTopBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/topBar"
            android:layout_marginStart="@dimen/_12ssp"
            android:layout_marginBottom="@dimen/_10ssp"
            android:fontFamily="@font/avenir_bold"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:textSize="@dimen/header_text" />

        <LinearLayout
            android:id="@+id/middleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTopBar"
            android:layout_marginStart="@dimen/_12ssp"
            android:layout_marginEnd="@dimen/_12ssp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:hint="User Name"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTxtUserNameLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60ssp"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:hint="Email"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTxtEmailLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60ssp"
                    android:inputType="textEmailAddress" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                app:boxBackgroundColor="@color/white"
                app:passwordToggleDrawable="@drawable/ic_baseline_visibility_24"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTxtPasswordLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60ssp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColorHint="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                app:boxBackgroundColor="@color/white"
                app:passwordToggleDrawable="@drawable/ic_baseline_visibility_24"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTxtConfirmPasswordLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60ssp"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:textColorHint="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/countrySpinnerLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60ssp"
                    android:focusable="false"
                    android:hint="Country"
                    android:textColorHint="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30ssp"
                android:layout_marginTop="@dimen/_15ssp"
                android:background="@drawable/btnbackground"
                android:fontFamily="@font/avenir"
                android:text="Sign Up"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_text" />

            <TextView
                android:id="@+id/htmlTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_22ssp"
                android:fontFamily="@font/avenir"
                android:text="By Signing up, you agree to our"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/title_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTerms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3ssp"
                    android:layout_weight="1"
                    android:fontFamily="@font/avenir"
                    android:text="Terms of use"
                    android:textAlignment="textEnd"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/title_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3ssp"
                    android:fontFamily="@font/avenir"
                    android:text=" and "
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_text" />

                <TextView
                    android:id="@+id/txtPrivacy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3ssp"
                    android:layout_weight="1"
                    android:fontFamily="@font/avenir"
                    android:text="Privacy Policy"
                    android:textAlignment="textStart"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/title_text" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10ssp"
                android:gravity="center"
                android:padding="@dimen/_5ssp">

                <TextView
                    android:id="@+id/txtLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir"
                    android:text="Don't you have an account? "
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_text" />

                <TextView
                    android:id="@+id/txtRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txtLeft"
                    android:fontFamily="@font/avenir"
                    android:text=" Login "
                    android:textAlignment="center"
                    android:textColor="@color/purple_200"
                    android:textSize="@dimen/title_text" />
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>
</layout>